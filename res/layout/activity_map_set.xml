<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mapset_bg"
    android:orientation="vertical"
    tools:context=".MapSetActivity" >
<include layout="@layout/layout_title_bar"/>
    <TextView
        style="@style/common_style_for_22sp_white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dip"
        android:layout_marginTop="20dip"
        android:text="@string/map_set1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dip" >

        <TextView
            android:id="@+id/text_mapfile"
            style="@style/common_style_for_24sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/mapset1"
            android:gravity="center_vertical"
            android:paddingLeft="10dip"
            android:text="tpws3001" />

        <ImageView
            android:id="@+id/img_mapfile_set"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/mapset2" />
    </LinearLayout>

    <TextView
        style="@style/common_style_for_22sp_white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dip"
        android:layout_marginTop="20dip"
        android:text="@string/map_set2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dip" >

        <TextView
            android:id="@+id/text_off_line"
            style="@style/common_style_for_24sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/mapset1"
            android:gravity="center_vertical"
            android:paddingLeft="10dip" />

        <ImageView
            android:id="@+id/img_off_line_set"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/mapset2" />
    </LinearLayout>

</LinearLayout>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pointmanager_bg"
    android:orientation="vertical"
    tools:context=".NewLineActivity" >

    <include layout="@layout/layout_title_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_marginTop="10dip"
            android:background="@drawable/icon_line" />

        <EditText
            android:id="@+id/edit_linename"
            style="@style/common_style_for_26sp"
            android:layout_width="wrap_content"
            android:layout_height="50dip"
            android:layout_marginLeft="10dip"
            android:paddingLeft="10dip"
            android:layout_marginTop="10dip"
            android:gravity="left|center_vertical"
            android:background="@drawable/list_text"
             />
        
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dip"
        android:layout_marginBottom="5dip"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_marginTop="10dip"
        android:background="@drawable/list_text"
        android:orientation="vertical" >

        <include layout="@layout/layout_listview" />
       
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_weight="1"
            android:background="@drawable/lin_bg"
            android:orientation="vertical" >

           <TextView
                style="@style/common_style_for_20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:layout_marginTop="10dip"
                android:text="@string/distance" />

            <TextView
                android:id="@+id/text_distance"
                style="@style/common_style_for_32sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginBottom="10dip"
                android:layout_marginRight="10dip"
                android:layout_marginTop="10dip"
                android:text="N/A" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="10dip"
            android:layout_weight="1"
            android:background="@drawable/lin_bg"
            android:orientation="vertical" >

            <TextView
                style="@style/common_style_for_20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:layout_marginTop="10dip"
                android:text="@string/azimuth" />

            <TextView
                android:id="@+id/text_azimuth"
                style="@style/common_style_for_32sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginBottom="10dip"
                android:layout_marginRight="10dip"
                android:layout_marginTop="10dip"
                android:text="N/A" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_weight="1"
            android:background="@drawable/list_text" >

            <TextView
                style="@style/common_style_for_20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:layout_marginTop="10dip"
                android:text="@string/type" />

            <TextView
                android:id="@+id/text_line"
                style="@style/common_style_for_20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:layout_marginTop="10dip"
                android:background="@drawable/search_result_sort"
                android:text="@string/thicklines" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="10dip"
            android:layout_weight="1"
            android:background="@drawable/list_text" >

            <TextView
                style="@style/common_style_for_20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:layout_marginTop="10dip"
                android:text="@string/color" />

            <TextView
                android:id="@+id/text_color"
                style="@style/common_style_for_20sp"
                android:layout_width="30dip"
                android:layout_height="20dip"
                android:layout_marginLeft="10dip"
                android:layout_marginTop="10dip"
                android:background="@color/red" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dip"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="15dip"
        android:layout_marginTop="10dip"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/text_navigation1"
            style="@style/common_style_for_32sp_white"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:layout_weight="1"
            android:background="@drawable/bg1"
            android:gravity="center"
            android:text="@string/navigation" />

        <TextView
            android:id="@+id/text_map1"
            style="@style/common_style_for_32sp_white"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:layout_weight="1"
            android:background="@drawable/bg2"
            android:gravity="center"
            android:text="@string/map" />
    </LinearLayout>

</LinearLayout>